{
  "name": "realestate-platform",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": ["services/*", "packages/*"],
  "scripts": {
    "build": "pnpm -r build",
    "dev:hello": "pnpm --filter hello-service dev", "dev:auth": "pnpm --filter auth-service dev",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "start:compose": "docker compose up -d",
    "stop:compose": "docker compose down -v"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "@types/node": "^20.11.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "prettier": "^3.2.5"
  }
}
